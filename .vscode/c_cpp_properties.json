{
    "version": 4,
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "C:/MinGW/include",  // Adjust this path if needed
                "C:/MinGW/lib/gcc/mingw32/6.3.0/include"  // Adjust according to your MinGW version
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "C:/MinGW/bin/g++.exe",  // Adjust this path if needed
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "C:/MinGW/include",  // Adjust this path if needed
                    "C:/MinGW/lib/gcc/mingw32/6.3.0/include"  // Adjust according to your MinGW version
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ]
}
